<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-us" lang="en-us">
  <head>
    <title><%= Settings.title %></title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <%= css_include_tag :master, :sh_mrdias %>
    <%= js_include_tag "sh_main.min", "sh_ruby.min" %>
  </head>
  <body onload="sh_highlightDocument();">
    <div id="wrap">
      <%= partial "common/header" %>
      <!-- Begin content -->
      <div id="content">
	<%= catch_content :for_layout %>
	<!-- End main column -->	
      </div>
      
      <div id="sidebar">
	<form method="get" action="/search">
	  <input type="text" name="q" size="12" maxlength="255" value="" style="float:left;"></input>
	  <input type="submit" name="search" value="Search" style="float: right;"></input>	  
	</form>
	<div style="clear: both"></div>
	<br />
	<h2>Links</h2>
	  <ul>
	    <%= site_links do |z,w| %>
	    <li><%= link_to z,w %></li>
	    <% end =%>
	  </ul>
	<% unless @archives.blank? -%>
	<h2>Archives</h2>
	<ul>
  	  <%= partial "articles/archive", :with => @archives %>
	</ul>
	<% end -%>

	<h2>Tags</h2>
	<ul id="sidebar_tag_cloud">
	  <%= partial "tags/tag_cloud" %>
	</ul>
	
	<% if Settings.github_username -%>
	<div id="github-badge"></div>
	<script type="text/javascript" charset="utf-8">
	  GITHUB_USERNAME="<%= Settings.github_username %>";
	  GITHUB_LIST_LENGTH=10;
	  GITHUB_HEAD="h2"; // e.g. change to "h2" for wordpress sidebars
	</script>
	<script src="http://drnicjavascript.rubyforge.org/github_badge/dist/github-badge-launcher.js" type="text/javascript"></script>
	<% end -%>
	
	<br />
	<h2>Powered By</h2>
	<p>Whydicab</p>

	<!-- End sidebar -->
      </div>

      <%= partial "common/footer" %>

      <!-- End wrapper -->
    </div>
    <% if Settings.disqus_shortname -%>
    <script type="text/javascript">
	//<[CDATA[
	(function() {
		var links = document.getElementsByTagName('a');
		var query = '?';
		for(var i = 0; i < links.length; i++) {
			if(links[i].href.indexOf('#disqus_thread') >= 0) {
				query += 'url' + i + '=' + encodeURIComponent(links[i].href) + '&';
			}
		}
		document.write('<script type="text/javascript" src="http://disqus.com/forums/<%= Settings.disqus_shortname %>/get_num_replies.js' + query + '"></' + 'script>');
		})();
	//]]>
    </script>
    <% end -%>
  </body>
</html>
