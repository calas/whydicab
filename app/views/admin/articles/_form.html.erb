<div class="row">
 <%= text_field :title, :label => "Title: *", :class => "forminput" %>
</div>
<div class="row">
 <%= select :locale, :collection => %w(en es), :label => "Language:", :class => "forminput" %>
</div>
<div class="row">
<%= text_area :body, :label => "Body:", :class => "forminput" %>
</div>
<div class="row">
<%= text_field :tag_list, :value => @article.frozen_tag_list, :label => "Tags:", :class => "forminput" %>
</div>
<div class="row">
<%= check_box :published, :label => "Published?:", :class => "forminput" %>
</div>
