<div id="article_<%= article.id %>">
<h2>
  <%= link_to article.title, url(:article, article) %> <br/>
  <span class="entrydate"><%= article.published_at.to_date %></span>
</h2>
<span class="body">
  <%= article.to_html %>
</span>

<p class="center small">
  <em>posted by <%= article.user.login %> @ <%= link_to article.published_at.to_time, url(:article, article) %></em>
  <% unless article.tags.empty? -%>
  <br />
  <em>Tags:
    <% article.tags.each do |tag| -%>
    <%= link_to tag.name, url(:tag, tag) %>
    <% end -%>
  </em>
  <% end -%>
</p>
<br/>
</div>
